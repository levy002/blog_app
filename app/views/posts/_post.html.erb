<div>
<%= link_to user_post_path(@user, id: post.id), class: 'flex flex-col gap-3 border-2 p-2' do %>
    <p class="text-sm">Post #<%= post.id %></p>
    <p><%= post.text %></p>

    <p class="self-end text-xs">
        <span>
          Comments: <%= post.comments.count || 0 %>,
          Likes: <%= post.likes.count || 0 %>
        </span>
    </p>
<% end %>

<% if can? :destroy, post %>
      <div><%= button_to 'Delete-Post', user_post_path(@user.id, post.id), method: :delete %></div>
    <% end %>
</div>
