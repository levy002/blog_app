<section>

   <div>
    <img src="<%= @user.photo %>" alt="image">
  </div>

  <div>
    <h2>
      <%= @user.name%>
    </h2>
    <p>
      Number of posts: <%= @user.posts_counter || 0%>
    </p>
  </div> 

  <div>
    <% @user.bio %>
  </div>

</section>

<section>
  <% @user.posts.each do |post| %>
    <%= render partial: 'post', locals: {post: post} %>
  <% end %>
</section>